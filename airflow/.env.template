# Airflow Environment Variables Template
# Copy this file to .env and fill in your values

# MySQL Database Configuration (for Airflow metadata)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE_AIRFLOW=airflow_metadata

# MySQL Database Configuration (for discovery database - used by DAG)
MYSQL_DATABASE=torro_discovery

# Azure Authentication Method: "service_principal" or "managed_identity"
AZURE_AUTH_METHOD=service_principal

# Azure Storage Type: "blob" or "datalake"
AZURE_STORAGE_TYPE=datalake

# Azure Storage Account Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_CONNECTION_STRING=your_connection_string_here

# Azure Service Principal Credentials (required for service_principal auth)
AZURE_CLIENT_ID=your_client_id_here
AZURE_CLIENT_SECRET=your_client_secret_here
AZURE_TENANT_ID=your_tenant_id_here

# Azure Data Lake Storage Gen2 Paths (comma-separated if multiple)
# Format: abfs://filesystem@account.dfs.core.windows.net/path
AZURE_DATALAKE_PATHS=abfs://your-filesystem@your-account.dfs.core.windows.net/your/path

# Azure Storage Containers (comma-separated, leave empty to scan all)
AZURE_CONTAINERS=

# Azure Storage Folders (comma-separated, leave empty to scan root)
AZURE_FOLDERS=

# Azure Environment Classification
AZURE_ENVIRONMENT=prod
AZURE_ENV_TYPE=production
AZURE_DATA_SOURCE_TYPE=credit_card

# Azure AI Language Service (DLP) Configuration (optional)
# Leave empty if not using Azure DLP for PII detection
AZURE_AI_LANGUAGE_ENDPOINT=https://your-language-resource.cognitiveservices.azure.com/
AZURE_AI_LANGUAGE_KEY=your_ai_language_key_here

# Email Notification Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_here
NOTIFICATION_EMAILS=email1@example.com,email2@example.com
EMAIL_RECIPIENTS=email1@example.com,email2@example.com

# Airflow Configuration
AIRFLOW_HOME=./airflow
AIRFLOW_WEBSERVER_PORT=8081
AIRFLOW__CORE__EXECUTOR=SequentialExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False

# Airflow Fernet Key (optional - Airflow will generate if not provided)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
AIRFLOW_FERNET_KEY=

# Database Retry Configuration
DB_RETRY_MAX_ATTEMPTS=20
