# Airflow Environment Variables Template
# Copy this file to .env and fill in the values

# MySQL Database Configuration for Airflow Metadata
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=torro_user
MYSQL_PASSWORD=YOUR_MYSQL_PASSWORD
MYSQL_DATABASE=airflow_metadata

# Azure Storage Account Configuration
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINERS=container1,container2

# Azure AI Language Service (DLP) Configuration for PII Detection
AZURE_AI_LANGUAGE_ENDPOINT=https://your-language-resource.cognitiveservices.azure.com/
AZURE_AI_LANGUAGE_KEY=your_ai_language_key

# Email Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Frontend URL (for email notifications with links)
FRONTEND_URL=https://your-domain.com

# Airflow Configuration
AIRFLOW_HOME=.
AIRFLOW__CORE__EXECUTOR=SequentialExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
